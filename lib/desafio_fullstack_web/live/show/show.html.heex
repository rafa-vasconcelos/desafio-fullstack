<main class="flex flex-col gap-5 py-10 px-5 lg:py-16 lg:px-16 xl:px-96 mx-auto text-[#364050] justify-center w-full">
  <header>
    <h1 class="text-2xl lg:text-3xl xl:text-6xl text-black font-semibold text-center lg:text-left">
      O que fazer em <span class="text-[#3B81F6]">Maceió</span>?
    </h1>

    <.link href="/">
      <button class="flex items-center gap-1 mt-5 lg:mt-10 text-[#3b81f5] font-medium text-lg w-fit">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-5 h-5 lg:w-6 lg:h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18"
          />
        </svg>
        Voltar
      </button>
    </.link>
  </header>

  <div>
    <h2 class="text-3xl lg:text-4xl xl:text-6xl font-bold text-black"><%= @activity.title %></h2>
    <div class="flex flex-wrap mt-2 gap-1">
      <%= for tag <- @activity.tags do %>
        <p class="bg-[#d1d5d8] rounded-xl px-2 text-xs lg:text-sm xl:text-base">
          <%= tag %>
        </p>
      <% end %>
    </div>

    <div class="flex flex-col lg:flex-row mt-10 gap-7">
      <!-- Description Section -->
      <div class="flex flex-col gap-3">
        <h3 class="text-xl lg:text-2xl font-semibold">Descrição</h3>
        <p class="leading-6 font-medium text-[#7c848e] text-sm lg:text-base">
          <%= @activity.description %>
        </p>
        <div class="flex gap-3 mt-3">
          <button class="bg-[#518eed] px-6 py-2 lg:px-8 lg:py-3 text-sm lg:text-base rounded-xl text-white font-medium flex items-center gap-1">
